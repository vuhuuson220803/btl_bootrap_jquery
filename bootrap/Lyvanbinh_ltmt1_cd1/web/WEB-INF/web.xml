<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Trangchu</servlet-name>
        <servlet-class>Trangchu</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Themmoi</servlet-name>
        <servlet-class>Themmoi</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Xoa</servlet-name>
        <servlet-class>Xoa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Sua</servlet-name>
        <servlet-class>Sua</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Trangchu</servlet-name>
        <url-pattern>/Trangchu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Themmoi</servlet-name>
        <url-pattern>/Themmoi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Xoa</servlet-name>
        <url-pattern>/Xoa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Sua</servlet-name>
        <url-pattern>/Sua</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
